{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "incremental": true,
    "tsBuildInfoFile": "./.tsbuildinfo",
    "rootDir": ".",
    "types": ["node", "vite/client", "react", "react-dom"],
    "jsx": "react-jsx",

    // Make fixture outputs surface missing/implicit types in editor + `tsc -p`.
    // The key signal we want is e.g.:
    //   Parameter 'props' implicitly has an 'any' type.
    "strict": true,
    "noImplicitAny": true,

    // Keep these relaxed to reduce noise while focusing on emitted prop types.
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": ["./fixtures.d.ts", "./**/*.ts", "./**/*.tsx", "./**/*.d.ts"],
  "exclude": [
    "../node_modules",
    "../dist",
    "./_unsupported.*",
    // Static properties on styled-components are not typeable without workarounds
    "./staticProp-basic.input.tsx",
    "./staticProp-basic.output.tsx"
  ]
}
